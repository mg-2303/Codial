<h1> Codiel/<%=title%>
</h1>
<hr>
<section>
    <h4>Posts</h4>
    <%if(locals.user){%>
        <form action="/posts/create" method="post">
            <textarea name="content" cols="10" rows="3" placeholder="Write Here"></textarea>
            <input type="submit" value="Post">
        </form>
        <%}%>
            <ul>
                <%for(post of posts){%>
                    <li>
                        <%=post.content%>
                            <%=post.user.name%>
                                <%if(locals.user && locals.user.id==post.user.id){%>
                                    <small>
                                        <a href="/posts/destroy/<%=post.id%>">X</a>
                                    </small>
                                    <%}%>
                                        <%if(locals.user){%>
                                            <form action="/comments/create" method="post">
                                                <input type="text" name="content" placeholder="comment here">
                                                <input type="hidden" name="post" value="<%=post._id%>">
                                                <input type="submit" value="Comment">
                                            </form>
                                            <%}%>
                                                <ul>
                                                    <%for(comment of post.comment){%>
                                                        <li>
                                                            <%=comment.content%>
                                                                <%=comment.user.name%>
                                                                    <%if(locals.user && locals.user.id==post.user.id){%>
                                                                        <small>
                                                                            <a href="/comments/destroy/<%=comment.id%>">X</a>
                                                                        </small>
                                                                        <%}%>
                                                        </li>
                                                        <%}%>
                                                </ul>
                                                <hr>

                    </li>
                    <%}%>
            </ul>
</section>